OPTIONS=symset:curses

# Disable autopickup
OPTIONS=!autopickup

# Make commands that ask for an inventory item pop up a menu
OPTIONS=force_invmenu

# Disable numpad
OPTIONS=number_pad:0

# Allow multiple saves and character names other than $USER
OPTIONS=name:player,selectsaved

# Options
OPTIONS=altmeta

# Visual options
OPTIONS=lit_corridor,hilite_pet,hilite_pile

# Add items to status line
OPTIONS=time,showexp

OPTIONS=menucolors
MENUCOLOR=" blessed " = green
MENUCOLOR=" holy " = green
MENUCOLOR=" cursed " = red
MENUCOLOR=" unholy " = red
MENUCOLOR=" cursed .* (being worn)" = orange&underline

